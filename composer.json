{
    "name": "sven/laravel-macro-attributes",
    "description": "Use attributes to add macros and mixins to any macroable class in Laravel.",
    "keywords": ["php-8", "laravel", "mixins", "macroable", "macro"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sven Luijten",
            "email": "contact@svenluijten.com",
            "homepage": "https://svenluijten.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "haydenpierce/class-finder": "^0.4.3",
        "illuminate/macroable": "^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Sven\\LaravelMacroAttributes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sven\\LaravelMacroAttributes\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sven\\LaravelMacroAttributes\\ServiceProvider"
            ],
            "aliases": {
                "LaravelMacroAttributes": "Sven\\LaravelMacroAttributes\\Facades\\LaravelMacroAttributes"
            }
        }
    }
}
